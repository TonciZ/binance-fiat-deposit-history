# Binance Credit Card Purchase Tracker - Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED: Binance API Credentials
# =============================================================================
# Get these from: https://www.binance.com/en/my/settings/api-management
# IMPORTANT: Only enable "Enable Reading" permission for security!

BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_secret_key_here

# =============================================================================
# OPTIONAL: Application Settings
# =============================================================================

# API rate limiting - delay between requests in seconds (default: 1.0)
SLEEP_BETWEEN_CALLS=1.0

# Historical data start year (default: 2016)
START_YEAR=2016

# Croatian Kuna to Euro conversion rate (default: 7.5)
# Only needed if you have HRK transactions
HRK_TO_EUR_RATE=7.5

# API request timeout in seconds (default: 30)
API_TIMEOUT=30

# Maximum number of API retries (default: 3)
MAX_RETRIES=3

# =============================================================================
# OPTIONAL: Donation Addresses (for open source contributors)
# =============================================================================

DONATION_BTC_ADDRESS=
DONATION_ETH_ADDRESS=
DONATION_URL=

# =============================================================================
# DEVELOPMENT: Debug Settings
# =============================================================================

# Enable debug logging (default: false)
DEBUG_MODE=false

# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
LOG_LEVEL=INFO
